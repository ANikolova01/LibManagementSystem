@model LibraryManagementSystem.Models.LibraryCardFullModel

@{
    ViewData["Title"] = "Create";
}
<div class="page-width padding-extracard">
<h2 class="header-color-create">Create</h2>

<h4>LibraryCard</h4>
<hr />
<div class="row">  
<div class="col-md-12">  
    <div class="form-group">  
        @Html.Raw(@ViewBag.Alert)  
    </div>  
</div>  
</div> 
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patron.Email" class="control-label"></label>
                <input asp-for="Patron.Email" class="form-control" />
                <span asp-validation-for="Patron.Email" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibraryCard.CurrentFees" class="control-label"></label>
                <input asp-for="LibraryCard.CurrentFees" class="form-control" />
                <span asp-validation-for="LibraryCard.CurrentFees" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibraryCard.Issued" class="control-label"></label>
                <input asp-for="LibraryCard.Issued" class="form-control" />
                <span asp-validation-for="LibraryCard.Issued" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
