@model LibraryManagementSystem.Models.BranchHours

@{
    ViewData["Title"] = "Create";
}
<div class="page-width">
<h2 class="header-color-create">Create</h2>

<h4>BranchHours</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Branch.Name" class="control-label"></label>
                <input asp-for="Branch.Name" class="form-control" />
                <span asp-validation-for="Branch.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label><br />
@*                <input asp-for="DayOfWeek" class="form-control" />*@
                <small class="text-muted">Place the number of the day of the week for which you want the next Open and Closing Time to be for. Write in a number 
                    from the following interval:
                </small>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio1" value="0">
                        <label class="form-check-label" for="inlineRadio1">Monday</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio2" value="1">
                        <label class="form-check-label" for="inlineRadio2">Tuesday</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio3" value="2">
                        <label class="form-check-label" for="inlineRadio3">Wednesday</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio4" value="3">
                        <label class="form-check-label" for="inlineRadio4">Thursday</label>
                    </div>                    
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio5" value="4">
                        <label class="form-check-label" for="inlineRadio5">Friday</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio6" value="5">
                        <label class="form-check-label" for="inlineRadio6">Saturday</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="DayOfWeek" class="form-check-input" type="radio" id="inlineRadio7" value="6">
                        <label class="form-check-label" for="inlineRadio7">Sunday</label>
                    </div>
                </div>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenTime" class="control-label"></label><br />
                <small class="text-muted">Place time for which you want the next Open and Closing Time to be for. Write in a number 
                    from the interval 0-23:
                </small>
                <input asp-for="OpenTime" class="form-control" />
                <span asp-validation-for="OpenTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CloseTime" class="control-label"></label><br />
                <small class="text-muted">Place time for which you want the next Open and Closing Time to be for. Write in a number 
                    from the interval 0-23:
                </small>
                <input asp-for="CloseTime" class="form-control" />
                <span asp-validation-for="CloseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
