@model LibraryManagementSystem.Models.ReservationFullModel

@{
    ViewData["Title"] = "Edit";
}
<div class="page-width">
<h2 class="header-color-edit">Edit for reservation</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <div type="date" class="input-group">
                <input asp-for="Book.Title" class="form-control" disabled/>
                </div>
                <span asp-validation-for="Book.Title" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patron.FirstName" class="control-label"></label>
                <div type="date" class="input-group">
                <input asp-for="Patron.FirstName" class="form-control" disabled/>
                </div>
                <span asp-validation-for="Patron.FirstName" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patron.LastName" class="control-label"></label>
                <div type="date" class="input-group">
                <input asp-for="Patron.LastName" class="form-control" disabled/>
                </div>
                <span asp-validation-for="Patron.LastName" class="alert-danger alert-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoldPlaced" class="control-label"></label>
                <input asp-for="HoldPlaced" class="form-control" />
                <span asp-validation-for="HoldPlaced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedOn" class="control-label"></label>
                <input asp-for="UpdatedOn" class="form-control" />
                <span asp-validation-for="UpdatedOn" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
