@model IEnumerable<LibraryManagementSystem.Models.LibraryBranch>

@{
    ViewData["Title"] = "Index";
}
<div class="page-width pb-5">
<h1>Library Branches</h1>
@if(User.IsInRole("SuperAdmin")){
<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
}
<div id="branches">
    <div id="branches-table"> 
        <table class="ui celled table compact table-striped table-hover" id="branchesIndexTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telephone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OpenDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfPatrons)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfAssets)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalAssetValue)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfPatrons)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfAssets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAssetValue)
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                        @if(User.IsInRole("SuperAdmin")){
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        }
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
</div>
@section Styles {
    <link href="https://cdn.datatables.net/1.11.3/css/dataTables.semanticui.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" rel="stylesheet" type="text/css" />
}

@section Scripts {

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.semanticui.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#branchesIndexTable').DataTable(                
                {"columnDefs": [
                { "orderable": false, "targets": [8] },
                { "orderable": true, "targets": [0, 1, 2, 3, 4, 5, 6, 7] }
            ]});
        });

    </script>
}