@using LibraryManagementSystem.Models
@model IEnumerable<LibraryManagementSystem.Models.LibraryBranch>
@{
    ViewBag.Title = "Branch Index";
}
<div class="page-width">
<h3>Branch Index</h3>
<div id="branchIndex">
      <div class="container">
      <div class="row hidden-md-up">
    @foreach (var branch in Model)
    {
        <div class="col-md-4">
        <div class="card" style="width: 20rem;">
            <img id="branchImage" src="data:image/*;base64,@(Convert.ToBase64String(branch.BranchImage))" class="card-img-top" alt="Image_of_the_library_interior">
            <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => branch.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => branch.Description)</p>
            <a asp-action="Details" asp-route-id="@branch.Id" class="btn btn-outline-success">See Details</a>
            </div>
        </div>
        </div>
    }
    </div>
    </div>
</div>
</div>